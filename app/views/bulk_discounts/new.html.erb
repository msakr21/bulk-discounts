<h1> New Bulk Discount Form </h1>

<%= form_with url: new_merchant_bulk_discount_path(@merchant), method: :post, local: true do |form| %>
  <%= form.label "Discount Amount:" %>
  <%= form.number_field :discount_amount %><br><br>
  <%= form.label "Quantity Threshold:" %>
  <%= form.number_field :quantity_threshold %><br><br>
  <%= form.submit "Submit" %>
<% end %>